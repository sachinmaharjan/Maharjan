= form_for(@user, :html => { :class => 'signup-form' }) do |f|
  .modal-header
    %h2 Edit user
  = render 'shared/error_messages', :object => f.object

  .field
    = gravatar_for @user
    %a{:href => "http://gravatar.com/emails"} change

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation, "Confirmation"
    = f.password_field :password_confirmation
  .actions
    = f.submit "Update", :class => "btn btn-large btn-success"