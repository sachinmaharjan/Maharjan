%h2 Edit user
= form_for(@user) do |f|
  = render 'shared/error_messages', :object => f.object
  
  %div
  = gravatar_for @user
  %a{:href => "http://gravatar.com/emails"} change

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation, "Confirmation"
    = f.password_field :password_confirmation
  .actions
    = f.submit "Update"